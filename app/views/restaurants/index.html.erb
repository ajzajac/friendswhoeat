<p id="notice"><%= notice %></p>
<div class="container">

<h1 style="color:goldenrod;text-align:center">All Restaurants</h1>
<div class="container" style="text-align:center">
<%= link_to "Make A Reservation", new_reservation_path, class: "btn btn-small btn-primary my-1 text-align:center", style: "color:goldenrod; text-align:center" %>
<%= link_to "Write A Review", new_review_path, class: "btn btn-small btn-primary my-1 text-align:center", style: "color:goldenrod; text-align:center" %>

</div>
<table class="table">
  <thead>
    <tr>
      <th>Restaurant Name</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sorted_restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.average_rating %></td>
        <td><%= link_to 'See Details', restaurant %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>