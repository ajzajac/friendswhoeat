<p id="notice"><%= notice %></p>

<h2>Newsfeed</h2>

<div>
<h3>Latest Reservations</h3>
<table class="table">

<thead>
<tr>
  <th>Time</th>
  <th>Num of guests</th>
  <th>User</th>
  <th>Restaurant</th>
  <th>Occasion</th>
  <th colspan="2"></th>
</tr>
</thead>

<tbody>
<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.reservation_time.to_s %></td>
    <td><%= reservation.num_of_guests %></td>
    <td><%= reservation.user.email %></td>
    <td><%= reservation.restaurant.name %></td>
    <td><%= reservation.occasion %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Delete', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

</div>

<div>
<h3>Latest Reviews</h3>
<ul>
</ul>
</div>
