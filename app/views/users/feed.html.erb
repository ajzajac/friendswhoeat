
<div class="container">
<h1 style="color:goldenrod;text-align:center;">My Newsfeed</h1>

<div>
<h4 style="color:goldenrod;">Friends Latest Reservations</h4>
<table class="table">

<thead>
<tr>
  <th>Restaurant</th>
  <th>Guests</th>
  <th>Occasion</th>
  <th>Time</th>
  <th>User</th>
</tr>
</thead>

<tbody>
<% @feed_reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.restaurant.name %></td>
    <td><%= reservation.num_of_guests %></td>
    <td><%= reservation.occasion %></td>
    <td><%= reservation.reservation_time.to_s %></td>
    <td><%= reservation.user.email %></td>
  </tr>
<% end %>
</tbody>
</table>

</div>

<div>
<h4 style="color:goldenrod;">Friends Latest Reviews</h4>
<table class="table">

<thead>
<tr>
  <th>Restaurant</th>
  <th>Rating</th>
  <th>Review</th>
  <th>User</th>
</tr>
</thead>

<tbody>
<% @feed_reviews.each do |review| %>
  <tr>
    <td><%= review.restaurant.name %></td>
    <td><%= review.rating %></td>
    <td><%= review.description %></td>
    <td><%= review.user.email %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
<br>