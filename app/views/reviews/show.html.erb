<p id="notice"><%= notice %></p>
<div class="container">

<h3 style="color:goldenrod; text-align:center"><%="#{@restaurant.name}"%> Reviews</h3>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Rating</th>
      <th>Restaurant</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.description %></td>
        <td><%= review.rating %></td>
        <td><%= review.restaurant.name %></td>
        <td><%= review.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
